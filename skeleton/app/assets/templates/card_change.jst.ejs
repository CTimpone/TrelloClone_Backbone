<form class="make-card-changes">
  <strong>Edit Card</strong>

  <label>
    Title
    <input type="text" name="title" value="<%=card.escape('title')%>">
  </label>

  <label>
    Description
    <textarea name="description" rows="8" cols="27"><%=card.escape('description')%></textarea>
  </label>

  <button name="submit-changes">Edit</button>

</form>
